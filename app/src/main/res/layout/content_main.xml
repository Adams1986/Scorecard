    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_main"
            tools:context="com.github.xb10.xb10_scorecard.MainActivity"
            android:background="@drawable/gb_nav_bg_bottom_green">

    <!--<android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:id="@+id/recycler_view">
    </android.support.v7.widget.RecyclerView>-->

    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/header">

        <TextView android:layout_width="0dp"
                  android:layout_weight="2"
                  android:gravity="center"
                  android:layout_height="match_parent"
                  android:textColor="@color/textColor"
                  android:text="Hole"
                  android:id="@+id/hole_number"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:layout_height="match_parent"
                android:id="@+id/par_number"
                android:text="Par"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:layout_height="match_parent"
                android:id="@+id/player_one"
                android:text="Simon"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textColor="@color/textColor"
                android:layout_height="match_parent"
                android:id="@+id/player_two"
                android:text="Kasper"
                android:gravity="center"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:layout_height="match_parent"
                android:id="@+id/player_three"
                android:text="Calvin"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:layout_height="match_parent"
                android:id="@+id/player_four"
                android:text="Peter"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:id="@+id/hole_view"
            android:layout_below="@id/header">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hole_view"
            >

        <TextView android:layout_width="0dp"
                  android:layout_weight="2"
                  android:gravity="center"
                  android:layout_height="match_parent"
                  android:textColor="@color/textColor"
                  android:background="@drawable/border"
                  android:text="F9"
                  />

        <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:background="@drawable/border"
                android:layout_height="match_parent"

                android:text="Par"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:background="@drawable/border"
                android:layout_height="match_parent"

                android:text="16"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textColor="@color/textColor"
                android:background="@drawable/border"
                android:layout_height="match_parent"

                android:text="13"
                android:gravity="center"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:background="@drawable/border"
                android:layout_height="match_parent"

                android:text="10"/>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:background="@drawable/border"
                android:layout_height="match_parent"

                android:text="11"/>

    </LinearLayout>

</RelativeLayout>
