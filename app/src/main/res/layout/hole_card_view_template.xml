<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hole_card_view"
        card_view:cardBackgroundColor="@color/colorBg"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="0dp"
        card_view:cardMaxElevation="0dp">

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="@dimen/table_height"
            android:background="@color/colorBg">

        <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">

            <TextView android:layout_width="0dp"
                      android:layout_weight="2"
                      android:gravity="center"
                      android:layout_height="match_parent"
                      android:textSize="@dimen/course_list_text_size"
                      android:textColor="@color/holeNumberColor"
                      android:background="@drawable/border"
                      android:id="@+id/hole_number"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@color/parColor"
                    android:background="@drawable/border"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/course_list_text_size"
                    android:id="@+id/par_number"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:background="@drawable/border"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/course_list_text_size"
                    android:id="@+id/player_one"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="@color/textColor"
                    android:background="@drawable/border"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/course_list_text_size"
                    android:id="@+id/player_two"
                    android:gravity="center"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:background="@drawable/border"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/course_list_text_size"
                    android:id="@+id/player_three"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:background="@drawable/border"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/course_list_text_size"
                    android:id="@+id/player_four"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>