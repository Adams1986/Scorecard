<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@drawable/border"
              android:layout_height="@dimen/table_height">

    <TextView android:layout_width="0dp"
              android:layout_weight="2"
              android:gravity="center"
              android:layout_height="match_parent"
              android:text="@string/front_nine_table_text"
              android:textColor="@color/textColor"/>

    <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:id="@+id/par_total_front_nine"
            android:layout_height="match_parent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:id="@+id/player_one_front_nine_total"
            android:layout_height="match_parent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textColor="@color/textColor"
            android:id="@+id/player_two_front_nine_total"
            android:layout_height="match_parent"
            android:gravity="center"/>

    <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:id="@+id/player_three_front_nine_total"
            android:layout_height="match_parent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:id="@+id/player_four_front_nine_total"
            android:layout_height="match_parent"/>

</LinearLayout>