<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/table_height"
        android:id="@+id/header"
        android:background="@drawable/background"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_width="0dp"
              android:layout_weight="2"
              android:gravity="center"
              android:layout_height="match_parent"
              android:textColor="@color/textColor"
              android:text="@string/text_scorecard_hole"
              android:id="@+id/hole_number"/>

    <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:layout_height="match_parent"
            android:id="@+id/par_number"
            android:text="@string/text_scorecard_par"/>

    <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:layout_height="match_parent"
            android:id="@+id/player_one_name"/>

    <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textColor="@color/textColor"
            android:layout_height="match_parent"
            android:id="@+id/player_two_name"
            android:gravity="center"/>

    <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:layout_height="match_parent"
            android:id="@+id/player_three_name"/>

    <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:layout_height="match_parent"
            android:id="@+id/player_four_name"/>

</LinearLayout>