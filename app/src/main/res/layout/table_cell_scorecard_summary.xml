<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hole_details_card_view"
        card_view:cardBackgroundColor="@color/colorBg"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="0dp"
        card_view:cardMaxElevation="0dp">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/colorBg">

        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/scorecard_summary_label_text_view"
                android:textColor="@color/textColor"
                android:gravity="start|center_vertical"
                android:background="@drawable/border_gray"
                android:textSize="@dimen/course_content_text_size"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"/>


        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:textSize="@dimen/course_content_text_size"
                  android:gravity="center"
                  android:background="@drawable/border_gray"
                  android:id="@+id/scorecard_summary_player_one_stats"
                  android:textColor="@color/textColor"/>

        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:textSize="@dimen/course_content_text_size"
                  android:gravity="center"
                  android:background="@drawable/border_gray"
                  android:id="@+id/scorecard_summary_player_two_stats"
                  android:textColor="@color/textColor"/>

        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:textSize="@dimen/course_content_text_size"
                  android:gravity="center"
                  android:background="@drawable/border_gray"
                  android:id="@+id/scorecard_summary_player_three_stats"
                  android:textColor="@color/textColor"/>

        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:textSize="@dimen/course_content_text_size"
                  android:gravity="center"
                  android:background="@drawable/border_gray"
                  android:id="@+id/scorecard_summary_player_four_stats"
                  android:textColor="@color/textColor"/>

    </LinearLayout>

</android.support.v7.widget.CardView>