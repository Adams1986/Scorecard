<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:layout_margin="2dp"
        card_view:cardBackgroundColor="@color/colorBg"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/btn_corner_radius">

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@color/colorBg">

        <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:id="@+id/btn_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>


        <TextView android:layout_width="300dp"
                  android:layout_height="wrap_content"
                  android:textSize="30sp"
                  android:gravity="start"
                  android:id="@+id/menu_option"
                  android:textColor="#FFF"
                  android:layout_toRightOf="@id/btn_image"
                  android:layout_toEndOf="@id/btn_image"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>