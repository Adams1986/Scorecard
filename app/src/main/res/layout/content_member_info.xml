<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_member_info"
        tools:context="com.github.xb10.scorecard.MemberInfoActivity"
        android:background="@drawable/background">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/member_name_header"
            android:id="@+id/name_view_header"
            android:textSize="20sp"
            android:gravity="start"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_view"
            android:textSize="20sp"
            android:gravity="start"
            android:textColor="@color/textColor"
            android:layout_alignTop="@+id/name_view_header"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/member_address_header"
            android:id="@+id/address_view_header"
            android:textSize="20sp"
            android:gravity="start"
            android:layout_below="@+id/name_view_header"
            android:layout_alignLeft="@+id/name_view_header"
            android:layout_alignStart="@+id/name_view_header"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_view"
            android:textSize="20sp"
            android:gravity="start"
            android:textColor="@color/textColor"
            android:layout_below="@+id/name_view"
            android:layout_alignLeft="@+id/name_view"
            android:layout_alignStart="@+id/name_view"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/member_handicap_header"
            android:id="@+id/handicap_view_header"
            android:textSize="20sp"
            android:gravity="start"
            android:layout_below="@+id/address_view"
            android:layout_alignLeft="@+id/address_view_header"
            android:layout_alignStart="@+id/address_view_header"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/handicap_view"
            android:textSize="20sp"
            android:gravity="start"
            android:textColor="@color/textColor"
            android:layout_alignTop="@+id/handicap_view_header"
            android:layout_alignLeft="@+id/address_view"
            android:layout_alignStart="@+id/address_view"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/member_clubs_header"
            android:id="@+id/clubs_view_header"
            android:textSize="20sp"
            android:gravity="start"
            android:layout_below="@+id/handicap_view_header"
            android:layout_alignLeft="@+id/handicap_view_header"
            android:layout_alignStart="@+id/handicap_view_header"/>

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clubs_view"
            android:textSize="20sp"
            android:gravity="start"
            android:textColor="@color/textColor"
            android:layout_below="@+id/handicap_view" android:layout_alignLeft="@+id/clubs_view_header"
            android:layout_alignStart="@+id/handicap_view"/>

</RelativeLayout>
