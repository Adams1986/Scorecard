<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:id="@+id/players_playing_list_view">

    </ListView>

    <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_to_distance_measurer"

            android:layout_marginTop="@dimen/btn_height"
            card_view:cardBackgroundColor="@color/colorBg"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="@dimen/btn_corner_radius">

        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:padding="@dimen/padding_std_layout"
                android:orientation="horizontal"
                android:background="@color/colorBg">

            <ImageView
                    android:layout_width="@dimen/image_view_width"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_image"
                    android:src="@drawable/gb_distance_measurer"/>


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/course_list_text_size"
                      android:gravity="start"
                      android:id="@+id/menu_option"
                      android:textColor="#FFF"
                      android:text="@string/distance_measurer_text"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>