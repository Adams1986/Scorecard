<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.github.xb10.scorecard">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity" android:theme="@style/AppTheme.NoActionBar" android:label="@string/login_header">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ScorecardActivity" android:theme="@style/AppTheme.NoActionBar" android:label="@string/scorecard_header"/>
        <activity android:name=".MainActivity"
                  android:label="@string/main_menu_header"
                  android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".MemberInfoActivity" android:theme="@style/AppTheme.NoActionBar" android:label="@string/member_info_header"/>
    </application>

</manifest>
